<h1>Nightly Server Report for <%= @today %></h1>
<div class="stats">
  <h3>Portal Stats</h3>
  <table>
    <thead>
    <th class="first">Measurement</th>
    <th>Count</th>
    </thead>
    <tbody>
    <tr>
      <td>Total Users</td>
      <td><%= @user_stats[:total] %></td>
    </tr>
    <tr>
      <td>Returning Users</td>
      <td><%= @user_stats[:active] %></td>
    </tr>
    <tr>
      <td>Studies Created</td>
      <td><%= @studies_created %></td>
    </tr>
    <tr>
      <td>Terra Workflows run since <%= @two_weeks_ago %></td>
      <td><%= @submissions %></td>
    </tr>
    <tr>
      <td>Ingest Pipeline Runs</td>
      <td><%= @ingest_runs %></td>
    </tr>
    </tbody>
  </table>
</div>
<% if @creation_info.count > 0 %>
  <div class="stats">
    <h3> Studies created - detail </h3>
    <table>
      <% @creation_info.each do |study_info| %>
      <tr>
        <td>
          <a href="https://singlecell.broadinstitute.org/single_cell/study/<%= study_info[:accession] %>"><%= study_info[:accession] %></a> <%= study_info[:title] %><br/>
          <b>files: </b> <%= study_info[:file_types].to_s %> <br/>
          <b>owner:</b> <%= study_info[:study_owner] %> <br/>
          <b>other studies by owner:</b>
            <% study_info[:other_studies].each do |other_study| %>
              <a href="https://singlecell.broadinstitute.org/single_cell/study/<%= other_study[0] %>"><%= other_study[0] %></a> (<%= other_study[1].to_date.to_s %>) &nbsp;
            <% end %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
<% end %>
<% if @deletion_info.count > 0 %>
  <div class="stats">
    <h3> Studies deleted </h3>
    <table>
      <% @deletion_info.each do |study_info| %>
      <tr>
        <td>
          <%= study_info[:accession] %>: <%= study_info[:title] %> (<%= study_info[:study_owner] %>)
        </td>
      </tr>
      <% end %>
    </table>
  </div>
<% end %>
<div class="stats">
  <h3>Disk Usage</h3>
  <table>
    <thead>
    <th class="first">Measurement</th>
    <th>Count</th>
    </thead>
    <tbody>
    <tr>
      <td>Total Disk Size</td>
      <td><%= number_to_human_size(@disk_stats[:total_space]) %></td>
    </tr>
    <tr>
      <td>Allocated</td>
      <td><%= number_to_human_size(@disk_stats[:space_used]) %></td>
    </tr>
    <tr>
      <td>Free</td>
      <td><%= number_to_human_size(@disk_stats[:space_free]) %></td>
    </tr>
    <tr>
      <td>Percent Used</td>
      <td><%= @disk_stats[:percent_used] %>%</td>
    </tr>
    </tbody>
  </table>
</div>
<div class="clear"></div>
<h3>Storage Integrity</h3>
<% if @missing_files.any? %>
  <table>
    <thead>
      <tr>
        <th>Study</th>
        <th>Owner</th>
        <th>Filename</th>
        <th>Issue</th>
      </tr>
    </thead>
    <tbody>
    <% @missing_files.each do |missing_file| %>
      <tr>
        <td><%= truncate(missing_file[:study], length: 30) %></td>
        <td><%= missing_file[:owner] %></td>
        <td><%= missing_file[:filename] %></td>
        <td><%= missing_file[:reason] %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% else %>
  <p>All files accounted for!</p>
<% end %>
