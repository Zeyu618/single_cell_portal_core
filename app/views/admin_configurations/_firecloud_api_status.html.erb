<div class="row">
  <div class="col-xs-12">
    <div class="table-responsive">
      <table class="table table-condensed table-hover">
        <thead>
          <tr>
            <th class="text-right" width="50%">Service</th>
            <th width="50%">Status</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td class="text-right">API</td>
            <td><%= @status['ok'] == true ? "<span class='label label-success'>OK</span>".html_safe : "<span class='label label-danger'>ERROR</span>".html_safe %></td>
          </tr>
          <% @status['systems'].each do |system, status| %>
            <% system_ok = status['ok'] == true %>
            <tr>
              <td class="text-right"><%= system %></td>
              <% if system_ok %>
                <td><span class="label label-success">OK</span></td>
              <% else %>
                <td><span class="label label-danger"><%= status['messages'].join(', ') %></span></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
      <p class="text-center"><%= link_to 'Status console', 'http://status.firecloud.org', class: 'btn btn-sm btn-primary',
                                         target: :_blank, rel: 'noopener noreferrer' %></p>
    </div>
  </div>
</div>
